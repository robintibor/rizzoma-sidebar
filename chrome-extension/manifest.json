{
  "name": "Rizzoma Sidebar Desktop Version",
  "version": "0.14",
  "manifest_version": 2,
  "description": "Have Rizzoma in a sidebar-iframe, remembers which topic you had open last :) (using Rizzoma Desktop Version)",
  "browser_action": {
    "default_icon": "rizzoma.png"
  }, 
  "background": {"page": "rizzoma-background.html"} ,
  "content_scripts": [
    {
      "matches": ["http://rizzoma.com/*", "https://rizzoma.com/*"],
      "js": ["js/lib/jquery-1.8.2.js",
        "js/rizzoma-iframe/remember-last-url.js",
        "js/rizzoma-iframe/style-desktop-iframe.js"],
      "all_frames" : true
    }
  ],
  "web_accessible_resources": [
    "css/current-page/rizzoma-i-frame.css"  
  ],
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]
}