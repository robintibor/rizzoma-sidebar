{
  "name": "Rizzoma Sidebar",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Have Rizzoma in a sidebar-iframe, remembers which topic you had open last :)",
  "browser_action": {
    "default_icon": "icon.png"
  }, 
  "background": {"page": "rizzoma-background.html"} ,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/lib/jquery-1.8.2.js"]
    },
    {
      "matches": ["http://rizzoma.com/*", "https://rizzoma.com/*"],
      "js": ["js/rizzoma-iframe/remember-last-url.js"],
      "all_frames" : true
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]
}