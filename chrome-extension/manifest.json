{
  "name": "Rizzoma Sidebar",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Have Rizzoma in a sidebar-iframe, remembers which topic you had open last :)",
  "browser_action": {
    "default_icon": "icon.png"
  }, 
  "background": { "scripts": ["toggle-sidebar.js"] },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["load-sidebar.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]
}